<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize your focus experience"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISPLAY &amp; BEHAVIOR"
            android:textColor="@color/accent_gold"
            android:textSize="11sp"
            android:letterSpacing="0.15"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_btn_unselected"
            android:backgroundTint="@color/surface_card"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Always On Display"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show tree when locked"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switchAOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="@color/white"
                android:trackTint="@color/accent_gold"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_btn_unselected"
            android:backgroundTint="@color/surface_card"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow Notifications"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pause growth on interrupt"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switchNotifs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/white"
                android:trackTint="@color/accent_gold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_frosted_card"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AOD Brightness"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/tvBrightnessLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textColor="@color/accent_gold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjusts brightness only for Focus Mode"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"/>

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/accent_gold"
                android:thumbTint="@color/text_primary"
                android:backgroundTint="@color/text_secondary"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAKE GESTURE"
            android:textColor="@color/accent_gold"
            android:textSize="11sp"
            android:letterSpacing="0.15"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSingleTap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Single Tap"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/bg_dark"
                android:background="@drawable/bg_btn_selected"
                android:stateListAnimator="@null"
                android:layout_marginEnd="6dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDoubleTap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Double Tap"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_btn_unselected"
                android:stateListAnimator="@null"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartAOD"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Activate Focus Mode"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/bg_dark"
            app:backgroundTint="@color/accent_gold"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>
</ScrollView>